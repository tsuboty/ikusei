<h1>Listing plants</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Pic url</th>
      <th>Temp</th>
      <th>Humidity</th>
      <th>Water height</th>
      <th>Ele cond</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.user_name %></td>
        <td><%= plant.pic_url %></td>
        <td><%= plant.temp %></td>
        <td><%= plant.humidity %></td>
        <td><%= plant.water_height %></td>
        <td><%= plant.ele_cond %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

